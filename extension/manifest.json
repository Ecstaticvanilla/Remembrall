{
    "manifest_version": 3,
    "name": "Remembrall",
    "version":"0.1",
    
    "permissions": [
        "tabs",
        "commands",
        "contextMenus",
        "activeTab",
        "scripting",
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "storage"
    ],
    "icons" : {
        "16" : "icons/iconcm.png",
        "128" : "icons/icon.png"
    },
    "content_scripts": [
        {
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "js/content.js",
            "js/note.js"
        ],
        "css": [
            "css/style.css",
            "css/note.css"
        ],
        "run_at":"document_idle"
        }
    ],
    "background" : {
        "service_worker" : "js/background.js",
        "type" : "module"
    },
    "action" :{
    "default_popup":"html/popup.html"
    },
    "optional_permissions": [
        "topSites"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "optional_host_permissions":[
    ]
}