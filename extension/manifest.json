{
    "manifest_version": 3,
    "name": "Remembrall",
    "version":"0.3",
    
    "permissions": [
        "tabs",
        "commands",
        "contextMenus",
        "activeTab",
        "scripting",
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "storage",
        "sidePanel",
        "windows"
    ],
    "icons" : {
        "16" : "icons/iconcm.png",
        "128" : "icons/icon.png"
    },
    "content_scripts": [
        {
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "js/content.js"
        ],
        "run_at":"document_idle"
        }
    ],
    "background" : {
        "service_worker" : "js/background.js",
        "type" : "module"
    },
    "side_panel": {
        "default_path": "html/sidepanel.html"
    },
    "action" :{
        "default_popup":"html/popup.html",
        "default_title": "Click to open panel"
    },
    "optional_permissions": [
        "topSites"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "optional_host_permissions":[
    ]
}